@{
    ViewData["Title"] = "Signin";
}

<div class="hanime-responsive-form">
    <div class="container">
        <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">
                <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign in</p>

                        <form class="mx-1 mx-md-4" method="post" asp-controller="Home" asp-action="Signin">

                            <div class="d-flex flex-row align-items-center mb-4">
                                <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                <div class="form-outline flex-fill mb-0">
                                    <input type="email" id="email" class="form-control" name="email" required />
                                    <label class="form-label" for="email">Your Email</label>
                                </div>
                            </div>

                            <div class="d-flex flex-row align-items-center mb-4">
                                <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                <div class="form-outline flex-fill mb-0">
                                    <input type="password" id="password" class="form-control" name="password"
                                           required pattern="\S{8,}" />
                                    <label class="form-label" for="password">Password</label>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                <button type="submit" class="btn btn-primary btn-lg">Login</button>
                            </div>

                        </form>

                        <span class="d-flex justify-content-center">
                            <span class="me-1">
                                Don't have an account yet?
                            </span>
                            <a asp-action="Signup" asp-controller="Home">Sign up</a>
                        </span>

                        <span class="d-flex justify-content-center">
                            <a asp-action="ForgotPassword" asp-controller="Home">Forgot your password?</a>
                        </span>
                    </div>
                    <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                        <img src="/assets/default.jpg" class="img-fluid rounded">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
